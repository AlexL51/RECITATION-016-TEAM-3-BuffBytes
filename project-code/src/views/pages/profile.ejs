<%- include ('../partials/header') %> 
<%- include ('../partials/menu') %>
<link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
<main>
  <div class="vh-100" style="background-color: #CFB87C;">
    <div class="container bg-light">
      <br>
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 mb-xl-0">
            <div class="card-body">
              <div class="text-center">
                <!-- Profile picture image-->
                <img class="img-account-profile rounded-circle mb-2" 
                    src="<%= currUser.profile_image %>" 
                    width="200"
                    height="200"
                    alt="">
                <br><br>
                <h4 class="text-black"><%= currUser.username %></h4>
                <br>
              </div>
              <div class="text-left">
                <a class="text-black mr-2"><%= currUser.description %></a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class ="card mb-4">
            <div class="card-body">
              <h4 class="text-black">Posts</h4>
              <br>
              <% if (userTopics.length === 0) { %> 
                <p class="text-black">No posts yet</p>
              <% } else { %>
                <% userTopics.forEach(function(topic) { %>
                  <div class="card row-hover pos-relative py-3 px-3 mb-3 border-warning border-top-0 border-right-0 border-bottom-0 rounded-1">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="text-black"><%= topic.subject %></h5>
                            <p class="text-sm">
                                <span class="op-6">Posted by</span>
                                <a class="text-black" href="#">
                                    <%= topic.username %>
                                </a>
                            </p>
                            <div class="text-sm op-5"> 
                                <% if (topic.body.length > 97) { %>
                                    <span style="display: inline"><%= topic.body.substring(0, 97) %></span>
                                    <a href="#" style="display: inline">...</a>       
                                <% } else { %>
                                    <a class="text-black mr-2"><%= topic.body %></a>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row text-center op-7">
                                <div class="col px-1">
                                    <i class="ion-ios-chatboxes-outline icon-1x"></i> 
                                    <a class="d-block text-sm" href="/comments/<%=topic.post_id%>">47 replies</a> 
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>
                <% }) %> 
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include ('../partials/footer') %> 
