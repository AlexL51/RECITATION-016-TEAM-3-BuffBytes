  <!-- Makes the entire backgroun a color-->
      <div class="vh" style="background-color: #CFB87C;">
        <div class="container py-5 h-100">
          <!--Div to align card to center-->
          <div class="row d-flex justify-content-center align-items-center h-100">
            <!--Sets width of the card that holds form-->
            <div class="col col-xl-6">
              <!-- Makes card with a radius of 16 px-->
              <div class="card" style="border-radius: 1rem;">
                <!-- Aligns the elements in the div to center-->
                  <div class="col-md-9 col-lg-12 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">
                      <!-- Form to process register-->
                      <form action="/login" method="POST">
      
                        <div class="d-flex align-items-center mb-3 pb-1">
                          <i class="fas fa-cubes fa-2x me-3"></i>
                          <span class="h1 fw-bold mb-0">BuffHeard</span>
                        </div>
      
                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
      
                        <div class="form-group mb-4">
                          <label class="form-label" for="username">Username</label>
                          <input type="text" id="username" class="form-control form-control-lg" name="username"/>
                        </div>
      
                        <div class="form-group mb-4">
                          <label class="form-label" for="password">Password</label>
                          <input type="password" id="password" class="form-control form-control-lg" name="password"/>
                        </div>
      
                        <div class="pt-1 mb-4">
                          <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                        </div>
                        <!--Redirect to /login if they have an account-->
                        <p class="mb-5 pb-lg-2" style="color: #000000;">Don't have an account? <a href="/register"
                            style="color: #2b3ae3;">Register here</a></p>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
</main>

